// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int      @id @default(autoincrement())
  email    String   @unique
  name     String
  password String
  username String?
  userIcon String?
  events   Events[]
}

model Events {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  allDay      Boolean  @default(false)
  eventStart  DateTime @db.Time()
  eventEnd    DateTime @db.Time()
  shiftStart  DateTime
  shiftEnd    DateTime
  user        User?    @relation(fields: [userId], references: [id])
  userId      Int?
}
